{
  "name": "@excss/compiler",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Taishi Naritomi",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/taishinaritomi/excss.git",
    "directory": "packages/compiler"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./binding/wasm-web/excss_compiler.d.ts",
  "main": "./binding/wasm-node/excss_compiler.js",
  "exports": {
    ".": {
      "types": "./binding/wasm-node/excss_compiler.d.ts",
      "browser": "./binding/wasm-web/excss_compiler.js",
      "default": "./binding/wasm-node/excss_compiler.js"
    }
  },
  "files": [
    "binding",
    "LICENSE"
  ],
  "scripts": {
    "test": "run-p test:*",
    "test:vitest": "vitest run",
    "test:vitest-type": "vitest typecheck --run",
    "build": "run-s build:node build:web build:clean",
    "build:node": "run-s build:node:*",
    "build:node:wasm-pack": "wasm-pack build --target=nodejs --no-pack --out-dir=../../binding/wasm-node --out-name=excss_compiler ./crates/compiler_wasm",
    "build:node:shim": "echo \"globalThis.crypto ??= require('crypto').webcrypto;\" >> binding/wasm-node/excss_compiler.js",
    "build:node:package-json": "echo '{\"type\":\"commonjs\"}' >> binding/wasm-node/package.json",
    "build:web": "run-s build:web:*",
    "build:web:wasm-pack": "wasm-pack build --target=web --no-pack --out-dir=../../binding/wasm-web --out-name=excss_compiler ./crates/compiler_wasm",
    "build:web:package-json": "echo '{\"type\":\"module\"}' >> binding/wasm-web/package.json",
    "build:clean": "rimraf binding/**/.gitignore"
  }
}
